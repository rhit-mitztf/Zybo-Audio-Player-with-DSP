
#ifndef AUDIO_CONSTANTS_H
#define AUDIO_CONSTANTS_H


// Number of seconds to record/playback
#define NR_SEC_TO_REC_PLAY 5

// ADC/DAC sampling rate in Hz
#define AUDIO_SAMPLING_RATE 48000

#define NR_CHANNELS 2

// Number of samples to record/playback per one channel
#define NR_AUDIO_SAMPLES (NR_SEC_TO_REC_PLAY * AUDIO_SAMPLING_RATE)

// One channel sample contains this many bytes
#define BYTES_PER_SAMPLE 4


#endif
